<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SenderActivity">

    <Button
        android:id="@+id/gmaps_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gmaps_btn"
        app:layout_constraintBottom_toTopOf="@id/sendmail_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendmail_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sendmail_btn"
        app:layout_constraintBottom_toTopOf="@id/open_receiver_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gmaps_btn" />

    <Button
        android:id="@+id/open_receiver_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_receiver_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sendmail_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>