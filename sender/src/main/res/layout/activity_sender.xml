<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SenderActivity">

    <Button
        android:id="@+id/button_google_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_to_google_maps" />

    <Button
        android:id="@+id/button_send_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send_email" />

    <Button
        android:id="@+id/button_open_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_open_receiver" />

</LinearLayout>
