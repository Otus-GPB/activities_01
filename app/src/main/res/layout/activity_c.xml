<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_open_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_activity_a" />

    <Button
        android:id="@+id/button_open_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_activity_d" />

    <Button
        android:id="@+id/button_close_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_activity_c" />

    <Button
        android:id="@+id/button_close_stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_stack" />

</LinearLayout>