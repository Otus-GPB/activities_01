<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityC"
    android:background="#2196f3">

    <TextView
        android:id="@+id/textViewActivityC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleC"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewActivityC">

        <Button
            android:id="@+id/btnOpenA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/openA" />

        <Button
            android:id="@+id/btnOpenD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/openD" />

        <Button
            android:id="@+id/btnCloseC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/closeC" />

        <Button
            android:id="@+id/btnCloseStack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/closeStack" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
