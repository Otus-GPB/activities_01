<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ActivityC">

    <Button
        android:id="@+id/open_a_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chocolate"
        android:text="@string/open_activity_a"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/open_d_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chocolate"
        android:text="@string/open_activity_d"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/open_a_button"
        app:layout_constraintStart_toStartOf="@id/open_a_button"
        app:layout_constraintTop_toBottomOf="@+id/open_a_button" />

    <Button
        android:id="@+id/close_c_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chocolate"
        android:text="@string/close_activity_c"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/open_d_button"
        app:layout_constraintStart_toStartOf="@id/open_d_button"
        app:layout_constraintTop_toBottomOf="@id/open_d_button" />

    <Button
        android:id="@+id/close_stack"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chocolate"
        android:text="@string/close_stack"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/close_c_button"
        app:layout_constraintStart_toStartOf="@id/close_c_button"
        app:layout_constraintTop_toBottomOf="@id/close_c_button" />


</androidx.constraintlayout.widget.ConstraintLayout>