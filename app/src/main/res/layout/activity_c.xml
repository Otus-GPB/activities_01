<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ActivityC">

    <Button
        android:id="@+id/open_a_from_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_activitya"
        app:layout_constraintBottom_toTopOf="@id/open_d_from_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open_d_from_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_activityd"
        app:layout_constraintBottom_toTopOf="@id/close_c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_a_from_c" />

    <Button
        android:id="@+id/close_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_activityc"
        app:layout_constraintBottom_toTopOf="@+id/close_stack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_d_from_c" />

    <Button
        android:id="@+id/close_stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/close_stack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/open_d_from_c" />
</androidx.constraintlayout.widget.ConstraintLayout>