<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ActivityB"
    tools:context=".ActivityB">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarB"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/mytoolbar"
        app:title="@string/toolbar_ActivityB"
        app:titleTextColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/GoActivityC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:text="@string/openActivityC"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:backgroundTint="@color/mybutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />
</androidx.constraintlayout.widget.ConstraintLayout>